<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/app_white"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/card_view_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sick_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:fadeDuration="1000"
            app:roundAsCircle="true"
            app:placeholderImage="@color/app_common_color_green"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/sick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="刘雯"
            android:textColor="@color/app_black"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/sick_icon"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/sick_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="近视一期有待观察患者"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/sick_icon"
            android:layout_marginTop="5dp"
            android:layout_alignBottom="@id/sick_icon"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>