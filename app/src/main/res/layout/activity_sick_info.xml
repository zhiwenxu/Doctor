<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_gray">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/title_bar"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <LinearLayout
                    android:id="@+id/green_layout"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@color/app_common_color_green"
                    android:orientation="horizontal"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@color/app_white"
                    android:layout_below="@id/green_layout">

                </RelativeLayout>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sick_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:fadeDuration="1000"
                    app:roundAsCircle="true"
                    app:placeholderImage="@mipmap/ic_launcher"
                    android:layout_centerInParent="true" />
                <TextView
                    android:id="@+id/sick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/app_black"
                    android:layout_below="@id/sick_icon"
                    android:text="刘雯"/>
                <TextView
                    android:id="@+id/sick_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/text_color_gray"
                    android:layout_below="@id/sick_name"
                    android:text="近视一期有待观察患者"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/girl_pic"
                    android:layout_alignTop="@id/sick_name"
                    android:layout_toRightOf="@id/sick_name"
                    android:layout_marginLeft="5dp"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/bj_pic"
                    android:layout_alignTop="@id/sick_detail"
                    android:layout_toRightOf="@id/sick_detail"
                    android:layout_marginLeft="5dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1px"
                android:background="@drawable/layout_item_bg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="@string/detail_data"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/app_black"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="1px"
                android:background="@drawable/layout_item_bg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="@string/sick_record"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/app_black"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/layout_item_bg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="随访记录"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/app_black"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>

            <Button
                android:id="@+id/sick_send_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/send_msg"
                android:textColor="@color/app_white"
                android:background="@drawable/green_btn_bg"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
